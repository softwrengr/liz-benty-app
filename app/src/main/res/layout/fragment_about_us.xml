<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.square.apple.pdf_app.fragments.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Who We Are"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:gravity="center"
                android:text="We are a boutique consulting firm that specializes in understanding human behavior and helping people rise into their power. Our team of highly pedigreed professionals delivers best-in-class service to individuals, teams and organizations across all industries and in companies of all sizes."
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="We differentiate ourselves through extensive knowledge in 3 key areas of talent development:" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/circle_height_width"
                    android:layout_height="@dimen/circle_height_width"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="@string/circle_text_1"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/circle_height_width"
                    android:layout_height="@dimen/circle_height_width"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="@string/circle_text_2"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/circle_height_width"
                    android:layout_height="@dimen/circle_height_width"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="@string/circle_text_3"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="50sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:text="As a lifelong competitive athlete, Liz Bentley successfully launched the company by utilizing her experience in sports to help her clients create a winning mindset in order to compete more effectively in the business world.  Many members of our team are accomplished athletes, and all members draw upon our extensive backgrounds in the corporate world. Our prior careers include working with Goldman Sachs, Deutsche Bank, CBS Network, Oracle, Conde Nast, Moore Capital, ABC/Disney, Hearst, R/GA Interactive and the NYC Public School System. With our founder’s background in psychology and our team’s expertise in research, we pride ourselves on being on the cutting edge of the evolution of human science."
            android:textSize="14dp" />
    </LinearLayout>

</ScrollView>
