<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.square.apple.pdf_app.fragments.HomeFragment">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/group"/>


    <TextView
        android:layout_below="@+id/iv_logo"
        android:id="@+id/tv_understand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:text="Understand different personalities\nand learn how to work\nwith them more  effectively."/>


    <TextView
        android:layout_below="@+id/tv_understand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:text="Get started by clicking a tab below"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/background"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/btn_dominant"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#222211"
            android:textColor="#fff"
            android:text="(D)\nDominant"
            />


        <Button
            android:id="@+id/btn_influncer"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#00004d"
            android:textColor="#fff"
            android:text="(I)\nInfluncer"
            />


        <Button
            android:id="@+id/btn_steady"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:textAllCaps="false"
            android:background="#008fb3"
            android:textColor="#fff"
            android:text="(S)\nSteady"
            />

        <Button
            android:id="@+id/btn_conscientious"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:textAllCaps="false"
            android:background="#006699"
            android:textColor="#fff"
            android:text="(C)\nConscientious"/>


    </LinearLayout>

</RelativeLayout>
