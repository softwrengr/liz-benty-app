<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.square.apple.pdf_app.fragments.OurCoachesFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_liz_bentley"
                    android:layout_width="@dimen/coaches_images_height_width"
                    android:layout_height="@dimen/coaches_images_height_width"
                    android:src="@drawable/liz_0" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Liz Bentley"
                    android:textColor="@color/coaches_heading_color"
                    android:textSize="@dimen/coaches_heading_text_size"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="President"
                    android:textSize="@dimen/coaches_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_karmen_dadourian"
                    android:layout_width="@dimen/coaches_images_height_width"
                    android:layout_height="@dimen/coaches_images_height_width"
                    android:src="@drawable/karmen" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Karmen Dadourian"
                    android:textColor="@color/coaches_heading_color"
                    android:textSize="@dimen/coaches_heading_text_size"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Executive Coach"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_alissa"
                    android:layout_width="@dimen/coaches_images_height_width"
                    android:layout_height="@dimen/coaches_images_height_width"
                    android:layout_toRightOf="@+id/iv_liz_bentley"
                    android:src="@drawable/alissa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Alissa Finerman"
                    android:textColor="@color/coaches_heading_color"
                    android:textSize="@dimen/coaches_heading_text_size"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Executive Coach"
                    android:textSize="@dimen/coaches_text_size" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_deanne_carter"
                    android:layout_width="@dimen/coaches_images_height_width"
                    android:layout_height="@dimen/coaches_images_height_width"
                    android:src="@drawable/deanne1" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Deanne Carter"
                    android:textColor="@color/coaches_heading_color"
                    android:textSize="@dimen/coaches_heading_text_size"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Executive Coach"
                    android:textSize="@dimen/coaches_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_georgina_miranda"
                    android:layout_width="@dimen/coaches_images_height_width"
                    android:layout_height="@dimen/coaches_images_height_width"
                    android:src="@drawable/georgina4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Georgina Miranda"
                    android:textColor="@color/coaches_heading_color"
                    android:textSize="@dimen/coaches_heading_text_size"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Executive Coach"
                    android:textSize="@dimen/coaches_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_gina_esposito"
                    android:layout_width="@dimen/coaches_images_height_width"
                    android:layout_height="@dimen/coaches_images_height_width"
                    android:src="@drawable/gina_e" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Gina Esposito"
                    android:textColor="@color/coaches_heading_color"
                    android:textSize="@dimen/coaches_heading_text_size"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Director of Client Services"
                    android:textSize="@dimen/coaches_text_size" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
